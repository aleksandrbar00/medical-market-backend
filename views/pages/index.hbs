                        </div>
                    </div>
                </div>

                <div class="popular-section">
                    <h3 class="popular-section_title">Популярные товары</h3>
                    <div class="slider glide">
                        <div class="glide__track" data-glide-el="track">
                            <ul class="glide__slides">
                                {{#each popularItems}}
                                    <li class="glide__slide carousel-row">
                                        {{#each this}}
                                            <div class="carousel-item">
                                                <div class="popular-section__item">
                                                    <div class="popular-section__item-image">
                                                        <img src="{{this.imageLink}}" alt="" class="section-image">
                                                    </div>
                                                    <div class="popular-section__item-title">
                                                        <a href="/catalog/items/{{this.id}}">{{this.name}}</a>
                                                    </div>
                                                    <div class="shadow-block"></div>
                                                </div>
                                            </div>
                                        {{/each}}
                                    </li>
                                {{/each}}
                            </ul>
                        </div>
                        <div class="glide__arrows" data-glide-el="controls">
                            <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
                                <i class="fas fa-chevron-left"></i>
                            </button>
                            <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
                                <i class="fas fa-chevron-right"></i>
                            </button>
                          </div>
                        <div class="glide__bullets" data-glide-el="controls[nav]">
                            <button class="glide__bullet" data-glide-dir="=0"></button>
                            <button class="glide__bullet" data-glide-dir="=1"></button>
                            <button class="glide__bullet" data-glide-dir="=2"></button>
